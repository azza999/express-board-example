<% include header %>

<div id="main-container" class="px-5 d-flex justify-content-center">

	<div class="col-2 mt-5 bg-white rounded-3 py-5 px-3 border">
		<h2 class="text-center">Login</h2>
		<form action="/user/login_process" method="post">
			<div class="col-12 mb-3">
				<label for="id" class="form-text fs-6 mb-3">아이디</label>
				<input type="text" class="form-control" id="id" name="id">
			</div>
			<div class="col-12 mb-3">
				<label for="password" class="form-text fs-6 mb-3">패스워드</label>
				<input type="password" class="form-control" id="password" name="password">
			</div>
			<div class="col-12 mb-1">
				<button type="submit" class="col-12 btn btn-primary mb-1">로그인</button>
				<a href="/user/register" class="col-12 btn border">회원가입</a>
			</div>
		</form>
	</div>

</div>

