<% include header %>

<div id="main-container" class="px-5 d-flex justify-content-center">

	<div class="col-xxl-3 col-md-4 mt-5 bg-white rounded-3 py-5 px-3 border">
		<h2 class="text-center">Login</h2>
		<form id="form" action="/user/register_process" method="post">
			<div class="col-12 mb-3 justify-content-between">
				<label for="id" class="form-text fs-6 mb-3">아이디</label>&nbsp;&nbsp;<span class="btn btn-outline-secondary fs-6">중복 확인</span>
				<input type="text" class="form-control w-100" id="id" name="id">
			</div>
			<div class="col-12 mb-3">
				<label for="id" class="form-text fs-6 mb-3">패스워드</label>
				<input type="password " class="form-control" id="password" name="password">
			</div>
			<div class="col-12 mb-3">
				<label for="id" class="form-text fs-6 mb-3">패스워드 확인</label>
				<input type="password " class="form-control" id="password_validate" name="password_validate">
			</div>
			<div class="col-12 mb-3">
				<label for="id" class="form-text fs-6 mb-3">이름</label>
				<input type="text" class="form-control" id="name" name="name">
			</div>
			<div class="col-12 mb-1">
				<button type="submit" id="submit" class="col-12 btn btn-primary mb-1">회원가입</button>
			</div>
		</form>
	</div>

</div>

<script type="text/javascript" src="/javascripts/login-page.js"></script>

<% include footer %>